/*
 * postOrder traverse
 */
public class Solution {
	public boolean isBalance(TreeNode root, Integer depth){
		if(root == null) return true;
		Integer leftDepth=new Integer(0);
		Integer rightDepth = new Integer(0);
		if(isBalance(root.left, leftDepth)&&isBalance(root.right, rightDepth)){
			int diff = leftDepth-rightDepth;
			if(diff<=1 && diff>=-1){
				depth = (leftDepth > rightDepth)?(leftDepth+1):(rightDepth+1);
				return true;
			}
		}
		return false;
	}
}
